{
  "extends": ["config:base", ":semanticCommitsDisabled"],
  "automerge": true,
  "automergeStrategy": "merge-commit",
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "groupName": "patch upgrades"
    },
    {
      "matchPackagePatterns": ["node"],
      "rangeStrategy": "replace"
    }
  ]
}
